<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidwallet">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_grayscale"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_grayscale"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark">
        <activity
            android:name=".activities.WalletActivity"
            android:label="@string/title_activity_wallet"
            android:theme="@style/AppTheme.Dark.NoActionBar"></activity>
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.Dark.NoActionBar" />
        <activity
            android:name=".activities.InputPinActivity"
            android:label="@string/title_activity_input_pin"
            android:theme="@style/AppTheme.Dark.NoActionBar" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>